{
    "name": "daniilborovkov/laravel-permission",
    "description": "Permission handling for Laravel 5.4 and up",
    "keywords": [
        "Daniilborovkov",
        "laravel",
        "permission",
        "acl",
        "security"
    ],
    "homepage": "https://github.com/daniilborovkov/laravel-permission",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniil Borovkov",
            "email": "daniilborowkow@gmail.com",
            "homepage": "https://daniilborovkov.site",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6",
        "illuminate/auth": "~5.3.0|~5.4.0|~5.5.0|~5.6.0|~5.7.0",
        "illuminate/container": "~5.3.0|~5.4.0|~5.5.0|~5.6.0|~5.7.0",
        "illuminate/contracts": "~5.3.0|~5.4.0|~5.5.0|~5.6.0|~5.7.0",
        "illuminate/database": "~5.4.0|~5.5.0|~5.6.0|~5.7.0"
    },
    "require-dev": {
        "orchestra/testbench": "~3.4.2|~3.5.0|~3.6.0|~3.7.0",
        "phpunit/phpunit": "^5.7|6.2|^7.0",
        "predis/predis": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Daniilborovkov\\Permission\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Daniilborovkov\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Daniilborovkov\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
